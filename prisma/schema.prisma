generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                   String                @id @default(uuid())
  name                 String?
  email                String                @unique
  passwordHash         String?
  phone                String?
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  emailVerified        DateTime?
  image                String?
  authProviders        Account[]
  consultationBookings ConsultationBooking[]
  newsletters          NewsletterEntry[]
  reviews              Review[]
  sessions             Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  access_token      String?
  expires_at        Int?
  providerAccountId String
  refresh_token     String?
  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Admin {
  id           String    @id @default(uuid())
  name         String?
  email        String    @unique
  passwordHash String
  role         String    @default("editor")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  createdCars  Car[]     @relation("CreatedBy")
  updatedCars  Car[]     @relation("UpdatedBy")
  sessions     Session[]
}

model Car {
  id             String         @id @default(uuid())
  brand          String
  model          String
  price          Float
  year           Int
  mileage        Int
  images         String[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @default(now())
  createdById    String?
  updatedById    String?
  condition      String?        @default("NULL")
  edition        String?        @default("NULL")
  transmission   String?
  bodyType       String?        @default("NULL")
  fuelType       String?
  engineCapacity Int?           @default(0) @db.SmallInt
  availability   Availability[]
  createdBy      Admin?         @relation("CreatedBy", fields: [createdById], references: [id])
  updatedBy      Admin?         @relation("UpdatedBy", fields: [updatedById], references: [id])
  reviews        Review[]
}

model Branch {
  id            String         @id @default(uuid())
  name          String
  location      String
  contactNumber String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now())
  availability  Availability[]
}

model Availability {
  id        String   @id @default(uuid())
  carId     String
  branchId  String
  quantity  Int
  updatedAt DateTime @default(now())
  branch    Branch   @relation(fields: [branchId], references: [id])
  car       Car      @relation(fields: [carId], references: [id])
}

model Review {
  id         String   @id @default(uuid())
  carId      String
  userId     String
  rating     Int
  comment    String
  adminReply String?
  createdAt  DateTime @default(now())
  car        Car      @relation(fields: [carId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model NewsletterEntry {
  id        String           @id @default(uuid())
  userId    String?
  email     String           @unique
  createdAt DateTime         @default(now())
  source    NewsletterSource @default(GUEST)
  status    NewsletterStatus @default(ACTIVE)
  user      User?            @relation(fields: [userId], references: [id])

  @@index([email])
  @@index([status])
}

model ConsultationBooking {
  id               String        @id @default(uuid())
  userId           String?
  fullName         String
  email            String
  phone            String
  vehicleType      String
  consultationType String
  preferredDate    DateTime
  preferredTime    String
  message          String?
  status           BookingStatus @default(PENDING)
  adminMessage     String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  user             User?         @relation(fields: [userId], references: [id])
}

model Session {
  id           String   @id @default(uuid())
  userId       String?
  adminId      String?
  refreshToken String
  userAgent    String?
  ipAddress    String?
  createdAt    DateTime @default(now())
  expiresAt    DateTime
  admin        Admin?   @relation(fields: [adminId], references: [id])
  user         User?    @relation(fields: [userId], references: [id])
}

model NewsletterBroadcast {
  id                    String                  @id
  newsletterId          String
  status                BroadcastStatus         @default(PENDING)
  sentCount             Int                     @default(0)
  sentAt                DateTime?
  createdAt             DateTime                @default(now())
  Newsletter            Newsletter              @relation(fields: [newsletterId], references: [id])
  NewsletterDeliveryLog NewsletterDeliveryLog[]

  @@index([status])
}

model Newsletter {
  id                  String                @id
  title               String
  subject             String
  content             String
  createdAt           DateTime              @default(now())
  NewsletterBroadcast NewsletterBroadcast[]
}

model NewsletterDeliveryLog {
  id                  String              @id
  broadcastId         String
  email               String
  status              DeliveryStatus
  errorMessage        String?
  sentAt              DateTime            @default(now())
  NewsletterBroadcast NewsletterBroadcast @relation(fields: [broadcastId], references: [id])

  @@index([email])
}

enum BookingStatus {
  PENDING
  ACCEPTED
  REJECTED
  COMPLETED
  CANCELLED
}

enum BroadcastStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum DeliveryStatus {
  SENT
  FAILED
}

enum NewsletterSource {
  GUEST
  USER
  ADMIN
}

enum NewsletterStatus {
  ACTIVE
  UNSUBSCRIBED
}
